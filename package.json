{
  "name": "@marp-team/marp",
  "description": "The entrance repository of Marp family",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Marp team",
    "url": "https://github.com/marp-team"
  },
  "contributors": [
    {
      "name": "Yuki Hattori",
      "url": "https://github.com/yhatt"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marp-team/marp"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "check:format": "yarn -s format -c",
    "format": "prettier \"**/*.{css,html,js,json,jsx,md,scss,yaml,yml}\"",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "website": "yarn -s workspace @marp-team/marp-website serve"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-react": "^7.19.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1"
  },
  "resolutions": {
    "**/optimist/minimist": "^0.2.1"
  }
}
